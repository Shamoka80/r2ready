{
  "name": "rur2-server",
  "version": "1.0.0",
  "description": "RUR2 Server Application",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx index.ts",
    "build": "tsc && node fix-imports.js",
    "start": "node dist/server/index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:push": "drizzle-kit push",
    "seed:mappings": "tsx tools/seed-question-mappings.ts",
    "seed:mappings:dry": "DRY_RUN=true tsx tools/seed-question-mappings.ts",
    "seed:mappings:fresh": "SEED_MODE=fresh CONFIRM_FRESH=yes tsx tools/seed-question-mappings.ts"
  },
  "dependencies": {
    "@types/speakeasy": "^2.0.10",
    "express-rate-limit": "^7.1.5",
    "qrcode": "^1.5.3",
    "sharp": "^0.33.2",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.16",
    "jest": "^30.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)(\\.js)$": ["$1.ts", "$1.tsx", "$1$2"],
      "^@shared/(.*)$": "<rootDir>/../shared/$1"
    },
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "services/**/*.ts",
      "middleware/**/*.ts",
      "routes/**/*.ts",
      "!**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 30000
  }
}
